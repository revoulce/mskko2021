<?xml version="1.0" encoding="utf-8"?>
<font-family xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- regular-->
    <font
        android:font="@font/alegreya_regular"
        android:fontStyle="normal"
        android:fontWeight="400" />

    <!-- italic -->
    <font
        android:font="@font/alegreya_italic"
        android:fontStyle="italic"
        android:fontWeight="400" />

    <!-- medium -->
    <font
        android:font="@font/alegreya_medium"
        android:fontStyle="normal"
        android:fontWeight="500" />

    <!-- medium italic -->
    <font
        android:font="@font/alegreya_medium_italic"
        android:fontStyle="italic"
        android:fontWeight="500" />

    <!-- bold -->
    <font
        android:font="@font/alegreya_bold"
        android:fontStyle="normal"
        android:fontWeight="700" />

    <!-- bold italic -->
    <font
        android:font="@font/alegreya_bold_italic"
        android:fontStyle="italic"
        android:fontWeight="700" />

    <!-- extra bold -->
    <font
        android:font="@font/alegreya_extra_bold"
        android:fontStyle="normal"
        android:fontWeight="800" />

    <!-- extra bold italic -->
    <font
        android:font="@font/alegreya_extra_bold_italic"
        android:fontStyle="italic"
        android:fontWeight="800" />

    <!-- black -->
    <font
        android:font="@font/alegreya_black"
        android:fontStyle="normal"
        android:fontWeight="900" />

    <!-- black italic -->
    <font
        android:font="@font/alegreya_black_italic"
        android:fontStyle="italic"
        android:fontWeight="900" />
</font-family>