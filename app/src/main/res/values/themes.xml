<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Mskko2021" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/outer_space</item>
        <item name="colorPrimaryVariant">@color/outer_space</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/granny_smith</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="background">@color/outer_space</item>
        <item name="fontFamily">@font/alegreya</item>
    </style>
    <style name="Theme.Mskko2021.Launcher" parent="Theme.Mskko2021">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>
    <style name="ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="fontFamily">@font/alegreya</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">25sp</item>
        <item name="android:paddingTop">16sp</item>
        <item name="android:paddingBottom">15sp</item>
        <item name="textAllCaps">false</item>
        <item name="cornerRadius">20sp</item>
    </style>
    <style name="TextViewStyleWhite" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/alegreya</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="TextEditStyleWhite" parent="Widget.AppCompat.EditText">
        <item name="android:textColorHint">@color/white</item>
        <item name="fontFamily">@font/alegreya</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>